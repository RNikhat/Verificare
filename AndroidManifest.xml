<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.calpion.provider"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="21" />

    <uses-feature android:name="android.hardware.screen.landscape" />

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/verificare_ico"
        android:label="@string/app_name"
        android:theme="@style/CustomActionBarTheme" >
        <activity
            android:name="com.calpion.provider.ui.Login"
            android:label="@string/app_name"
            android:screenOrientation="landscape" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.calpion.provider.ui.MainActivity"
            android:screenOrientation="landscape"
            android:configChanges="orientation|screenSize" >
        </activity>
        <activity
            android:name="com.calpion.provider.ui.Home"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="com.calpion.provider.ui.FilePicker"
            android:screenOrientation="landscape" >
        </activity>
    </application>

</manifest>